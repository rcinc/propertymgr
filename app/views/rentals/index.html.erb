<p id="notice"><%= notice %></p>

<h1 class="center">Listing Rentals</h1>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Address</th>
      <th>Rent amount</th>
      <th>Tenant names</th>
      <th>Tenant numbers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
    <% if !rental.vacant %>
      <tr>
        <td><%= link_to rental.address, rental %></td>
        <td><%= number_to_currency(rental.rentamount) %></td>
        <td><%= rental.tenantnames %></td>
        <td><%= rental.tenantnumbers %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="center">
<button type="button" class="btn btn-success "><%= link_to 'Add New Rental', new_rental_path %></button>
</div>
